<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fondo_color_yellow"
        android:layout_width="210dp"
        android:layout_height="199dp"
        android:background="@drawable/bg_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProductoListVista"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:src="@drawable/circular_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.491" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/lblMarca"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:fontFamily="@font/gadugib"
        android:gravity="center"
        android:text="Marca"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/fondo_color_yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/lblMotor"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:fontFamily="@font/gadugib"
        android:gravity="center"
        android:text="Motor"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/fondo_color_yellow"
        app:layout_constraintTop_toBottomOf="@+id/lineavertical"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/lblChasis"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:fontFamily="@font/gadugib"
        android:gravity="center"
        android:text="Chasis"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/fondo_color_yellow"
        app:layout_constraintTop_toBottomOf="@+id/lblMotor"
        app:layout_constraintVertical_bias="0.041" />

    <TextView
        android:id="@+id/lblVin"
        android:layout_width="122dp"
        android:layout_height="41dp"
        android:fontFamily="@font/gadugib"
        android:gravity="center"
        android:text="Vin"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fondo_color_yellow"
        app:layout_constraintVertical_bias="0.004" />

    <TextView
        android:id="@+id/lblCombustion"
        android:layout_width="200dp"
        android:layout_height="41dp"
        android:fontFamily="@font/gadugib"
        android:gravity="center"
        android:text="Combustion"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toEndOf="@+id/lblVin"
        app:layout_constraintTop_toBottomOf="@+id/fondo_color_yellow"
        app:layout_constraintVertical_bias="0.004" />

    <ImageView
        android:id="@+id/lineavertical"
        android:layout_width="130dp"
        android:layout_height="2dp"
        android:background="@color/sky_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toEndOf="@+id/fondo_color_yellow"
        app:layout_constraintTop_toBottomOf="@+id/lblMarca"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>